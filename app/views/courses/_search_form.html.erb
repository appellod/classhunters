		    	<%= render 'courses/days_form' %>
		    </div>
		    <div class="col-sm-4">
		    	<%= render 'courses/time_form' %>
		    </div>
	    	<div class="col-sm-4">
		    	<%= render 'courses/online_form' %>
		    </div>
		    <div style="clear: both;"></div>
		    <%= submit_tag 'Apply Filters', id: 'submitbtn', class: "btn btn-large btn-primary" %>
			</div>
		<% end %>
	<% end %>
<% end %>