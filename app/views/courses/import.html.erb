<% provide(:title, "Import Courses") %>
<% breadcrumbs({ 'Home'=>root_url, 'Account'=>user_path(current_user), @school.name=>edit_school_path(@school), 'Courses'=>school_edit_courses_path(@school), 'Import'=>'' }) %>
<h1><span>Import Courses</span></h1>

<div class="import">
	<%= form_tag school_import_courses_path(@school), method: :post, multipart: true do %>

		<%= label_tag :semester %>
		<%= select_tag :semester, options_for_select(semesters_array, params[:semester]) %>

		<%= label_tag :type %>
		<%= select_tag :type, options_for_select(['Schedule', 'Descriptions']) %>

		<%= label_tag 'Upload classes from CSV file' %>
		<%= file_field_tag :file %>

	  <%= submit_tag "Import Courses", class: "btn btn-large btn-primary" %>
	<% end %>
</div>