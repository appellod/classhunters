<%= render "shared/loading" %>

<% if @user.present? %>
	<% provide(:title, 'My Sessions') %>
  <h1>My Sessions</h1>
<% elsif @school.present? %>
	<% provide(:title, "Sessions at #{@school.name}".html_safe) %>
	<% provide(:meta, "Browse schedules of all courses offered at #{@school.name}") %>
	<% breadcrumbs({ 'Home'=>root_url, 'Schools'=>schools_path, @school.name=>school_path(@school), 'Courses'=>school_courses_path(@school), 'Sessions'=>'' }) %>
  <h1>Course Sessions at <%= @school.name %></h1>
  <h2>Search for classes at local colleges and universities</h2>
	<p>Use the "Optional Search Filters" to narrow your search by criteria such as location, time and meeting days. Click on a class to view more information about that class.</p>
<% else %>
	<% provide(:title, 'Search All Sessions') %>
	<% provide(:meta, 'Find the schedules of classes being offered at colleges and universities near you by keyword, time and many other criteria') %>
	<% breadcrumbs({ 'Home'=>root_url, 'Courses'=>courses_path, 'Sessions'=>"" }) %>
  <h1>Search Sessions</h1>
  <h2>Search for classes at local colleges and universities</h2>
	<p>Use the "Optional Search Filters" to narrow your search by criteria such as location, time and meeting days. Results are displayed under collapsable tabs by school. Click on the school's tab to view its matching classes. Click on a class to view more information about that class.</p>
<% end %>
<div class="sort">
	<% if params[:search].present? %>
		<% if @school.present? %>
			<%= link_to "Courses", school_courses_path(@school, search: params[:search]) %>
		<% else %>
			<%= link_to "Courses", courses_path(search: params[:search]) %>
		<% end %>
	<% else %>
		<% if @school.present? %>
			<%= link_to "Courses", school_courses_path(@school) %>
		<% else %>
			<%= link_to "Courses", courses_path %>
		<% end %>
	<% end %>
	 | 
	<strong>Sessions</strong>
</div>

<%= render 'search_form' %>

<div class="results">
	<%= render(partial: 'results') %>
</div>