<% if mobile? || tablet? %>
  <div class="mobile-menu">
    <div class="header">
      <a href="#menu" class="toggle">
        <span class="icon-bar"></span>
        <span class="icon-bar"></span>
        <span class="icon-bar"></span>
      </a>
      <%= link_to 'Classhunters', root_path, class: 'title' %>
    </div>
    <nav id="menu">
      <ul class="nav">
        <li>
          <%= form_tag courses_path, method: 'get' do %>
          <div class="input-group">
            <%= text_field_tag :search, params[:search], class: 'form-control', placeholder: 'Search for Classes' %>
            <span class="input-group-btn">
              <button class="btn btn-default" type="button" onclick="this.form.submit();"><i class="glyphicon glyphicon-search"></i></button>
            </span>
          </div>
          <% end %>
        </li>
        <li><%= link_to 'Home', root_path %></li>
        <li><%= link_to 'About', about_path %></li>
        <li><%= link_to 'Contact', contact_path %></li>
        <li><%= link_to 'Schools', schools_path %></li>
        <li><%= link_to 'Courses', courses_path %></li>
        <% if signed_in? %>
          <li><%= link_to 'Account', user_path(current_user) %></li>
          <li><%= link_to 'Sign Out', signout_path %></li>
        <% else %>
          <li><%= link_to 'Sign In', signin_path %></li>
        <% end %>
      </ul>
    </nav>
  </div>
<% else %>
  <nav class="navbar navbar-default" role="navigation">
    <div class="navbar-header">
      <button type="button" class="navbar-toggle collapsed" data-toggle="collapse" data-target="#bs-example-navbar-collapse-1">
        <span class="sr-only">Toggle navigation</span>
        <span class="icon-bar"></span>
        <span class="icon-bar"></span>
        <span class="icon-bar"></span>
      </button>
        <%#= link_to 'Classhunters', root_path, class: 'navbar-brand' %>
    </div>

    <ul class="nav navbar-nav">
      <li><%= link_to 'Home', root_path %></li>
      <li><%= link_to 'About', about_path %></li>
      <li><%= link_to 'Contact', contact_path %></li>
      <li><%= link_to 'Schools', schools_path %></li>
      <li><%= link_to 'Courses', courses_path %></li>
      <% if signed_in? %>
        <li><%= link_to 'Account', user_path(current_user) %></li>
        <li><%= link_to 'Sign Out', signout_path %></li>
      <% else %>
        <li><%= link_to 'Sign In', signin_path %></li>
      <% end %>
    </ul>

    <div class="collapse navbar-collapse" id="bs-example-navbar-collapse-1">
      <ul class="nav navbar-nav navbar-right">
        <li>
          <%= form_tag courses_path, method: 'get' do %>
          <div class="input-group">
            <%= text_field_tag :search, params[:search], class: 'form-control', placeholder: 'Search for Classes' %>
            <span class="input-group-btn">
              <button class="btn btn-default" type="button" onclick="this.form.submit();"><i class="glyphicon glyphicon-search"></i></button>
            </span>
          </div>
          <% end %>
        </li>
      </ul>
    </div><!-- /.navbar-collapse -->
  </nav>
<% end %>