<%= form_for contact, url: contact_path(contact) do |f| %>

	<div class="col-sm-6">
		<%= f.label :name %>
		<%= f.text_field :name %>
		<%= render 'shared/errors', object: contact, field: :name %>

		<%= f.label :email %>
		<%= f.email_field :email %>
		<%= render 'shared/errors', object: contact, field: :email %>

		<%= f.label :school, "School (optional)" %>
		<%= f.text_field :school %>
		<%= render 'shared/errors', object: contact, field: :school %>
	</div>

	<div class="col-sm-6">
		<%= f.label :message, "Message (optional)" %>
		<%= f.text_area :message, rows: 3 %>
	</div>

	<div style="clear:both"></div>

	<%= f.submit "Submit Information", class: "btn btn-large btn-primary" %>
<% end %>
