<div class="container-fluid home-form">
  <div class="container-fluid">
    <%= form_tag courses_path, method: 'get' do %>
      <% if mobile? %>
        <h1>
          Find A Class<br>Near You
        </h1>
        <%= text_field_tag :search, params[:search], class: 'form-control', placeholder: 'Biology, Business, etc...', id: 'home-search' %>
        <button class="btn btn-default" type="button" onclick="this.form.submit();">Search Classes</button>
      <% else %>
        <div class="group">
          <h1>
            Find A Class Near You
          </h1>
          <div class="input-group">
            <%= text_field_tag :search, params[:search], class: 'form-control', placeholder: 'Biology, Business, Computers, etc...', id: 'home-search' %>
            <span class="input-group-btn">
              <button class="btn btn-default button" type="button" onclick="this.form.submit();">Search Classes</button>
            </span>
          </div>
        </div>
      <% end %>
    <% end %>
  </div>
</div>
<div class="container-fluid home-perks">
  <div class="container">
    <div class="col-sm-4 perk">
      <h1>Find Classes</h1>
      <h2>
        Search for all nearby classes currently being offered or view all courses that a school is currently offering.
      </h2>
    </div>
    <div class="col-sm-4 perk">
      <h1>Find Schools</h1>
      <h2>
        Search for schools by name, distance, state and map.
      </h2>
    </div>
    <div class="col-sm-4 perk">
      <h1>Save Time</h1>
      <h2>
        All searches and features on Classhunters are designed with simplicity in mind. No confusing forms. All results are displayed in uniform format.
      </h2>
    </div>
    <div class="clearfix"></div>
  </div>
</div>
<div class="container-fluid home-contact">
  <div class="container">
    <%= render 'contacts/form', contact: @contact %>
  </div>
</div>