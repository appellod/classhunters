<%= render 'shared/results_pagination', items: @schools if current_user.admin? || @schools.total_pages > 1 %>
<div class="schools-container">
<% @schools.each do |school| %>
	<div class="school">
		<%= school.name %>
		<%= link_to image_tag('icon-edit.png'), edit_school_path(school), class: 'icon' %>
		<div style="clear: both;"></div>
	</div>
<% end %>