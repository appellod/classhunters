<%= render 'shared/results_pagination', items: @schools %>
<div class="box-header">My Schools</div>
<div class="schools-container">
<% @schools.each do |school| %>
	<div class="school">
		<%= school.name %>
		<%= link_to image_tag('icon-edit.png'), edit_school_path(school), class: 'icon' %>
		<div style="clear: both;"></div>
	</div>
<% end %>
</div>